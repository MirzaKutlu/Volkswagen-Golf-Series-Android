<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin"
        app:cardCornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_splashscreen">

            <ImageView
                android:id="@+id/golfImage"
                android:layout_width="@dimen/layout_height_imageGolf_width"
                android:layout_height="@dimen/layout_height_imageGolf_height"
                android:layout_marginStart="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginBottom="@dimen/layout_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/golfName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_left_text"
                android:layout_marginTop="@dimen/layout_margin"
                android:fontFamily="@font/audiowide"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toEndOf="@+id/golfImage"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="GOLF MKI" />

            <TextView
                android:id="@+id/golfInfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_text"
                android:layout_marginTop="@dimen/layout_margin_left_text"
                android:layout_marginEnd="@dimen/layout_margin"
                android:fontFamily="@font/audiowide"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_smaller"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/golfImage"
                app:layout_constraintTop_toBottomOf="@+id/golfName"
                tools:text="Beygir Gücü : 80HP" />

            <TextView
                android:id="@+id/golfInfo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_text"
                android:layout_marginTop="@dimen/layout_margin_left_text"
                android:layout_marginEnd="@dimen/layout_margin"
                android:fontFamily="@font/audiowide"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_smaller"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/golfImage"
                app:layout_constraintTop_toBottomOf="@+id/golfInfo1"
                tools:text="Ağırılık : 900 Kg" />

            <TextView
                android:id="@+id/golfInfo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_text"
                android:layout_marginTop="@dimen/layout_margin_left_text"
                android:layout_marginEnd="@dimen/layout_margin"
                android:fontFamily="@font/audiowide"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_smaller"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.742"
                app:layout_constraintStart_toEndOf="@+id/golfImage"
                app:layout_constraintTop_toBottomOf="@+id/golfInfo2"
                tools:text="Çıkış Yılı : 1970" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>